{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018"],
    "target": "ES2018",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "rootDir": ".",
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "android",
    "coverage",
    "ios",
    "test"
  ]
}
